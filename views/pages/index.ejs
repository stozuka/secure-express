<%- include('../partials/header') %>

  <div class="container">
    <div id="title" class="row">
      <h1>Simple Vote</h1>
    </div>

    <div id="items" class="row">
      <div class="col-md-1"></div>
      <% data.forEach(e => { %>
        <div class="col-md-5">
          <p class="item-name" id="item-<%= e.id %>">
            <%= e.item %>
          </p>
          <p class="item-count" id="vote-count-<%= e.id %>">
            <%= e.votes %>
          </p>
          <button type="button" name="button" value="<%= e.id %>" class="item-vote btn btn-primary btn-lg">Vote</button>
        </div>
        <% }) %>
        <div class="col-md-1"></div>
    </div>

    <div class="row">
      <button type="button" name="button" id="edit" class="edit-reset btn btn-success">Edit Items</button>
      <button type="button" name="button" id="reset" class="edit-reset btn btn-danger">Reset Vote</button>
    </div>
  </div>

  <%- include('../partials/footer') %>
